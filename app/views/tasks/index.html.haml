:javascript
 $(document).ready( function() {
 $('#example').dataTable();
 } );

.page-header
 %h1 Task List

%table.table.table-striped.table-bordered.table-condensed#example
 %thead
  %tr
   %th Project name
   %th Task name
   %th Performed on
   %th Hours
   %th Notes
   %th User
   %th Email
   %th
   %th
   %th
 %tbody
  - @tasks.each do |task|
   %tr
    %td= task.project_name
    %td= task.task_name
    %td= task.performed_on
    %td= task.hours
    %td= task.notes
    %td= task.user.name
    %td= task.user.email
    %td= link_to 'Show', task
    %td= link_to 'Edit', edit_task_path(task)
    %td= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete
